<UserControl x:Class="CHIMInstaller.Views.InstallationPathView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid Background="{DynamicResource MaterialDesignPaper}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <materialDesign:PackIcon Kind="Folder" Width="64" Height="64" Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Center" Margin="0,0,0,16" />
            <TextBlock Text="Installation Path" Style="{StaticResource SectionHeaderStyle}" HorizontalAlignment="Center" Margin="0,0,0,8" />
            <TextBlock Text="Choose installation directory." FontSize="14" Foreground="{DynamicResource MaterialDesignBodyLight}" HorizontalAlignment="Center" />
        </StackPanel>
    </Grid>
</UserControl> 