<Window x:Class="CHIMInstaller.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

                xmlns:viewModels="clr-namespace:CHIMInstaller.ViewModels"
        Title="CHIM AI Installer" 
        Width="900" Height="600"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>

    <!-- Main container with shadow effect -->
                <Border Background="#FF2D2D30" CornerRadius="8" Margin="20">
        
        <Grid>
            <Grid.RowDefinitions>
                <!-- Title bar -->
                <RowDefinition Height="Auto" />
                <!-- Content area -->
                <RowDefinition Height="*" />
                <!-- Progress indicator -->
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Title Bar -->
                            <Grid Grid.Row="0" MouseLeftButtonDown="DragArea_MouseLeftButtonDown" 
                                     Background="#FF673AB7" Height="50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Logo and Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" 
                           VerticalAlignment="Center" Margin="16,0">
                    <TextBlock Text="ðŸ¤–" 
                               FontSize="16" 
                               Foreground="White" 
                               VerticalAlignment="Center" />
                    <TextBlock Text="CHIM AI Installer" 
                              Foreground="White" 
                              FontSize="16" FontWeight="Medium"
                              VerticalAlignment="Center" 
                              Margin="12,0,0,0" />
                </StackPanel>

                <!-- Version Info -->
                <TextBlock Grid.Column="1" 
                          Text="{Binding Version, StringFormat='v{0}'}" 
                          Foreground="White" Opacity="0.8"
                          FontSize="12" 
                          VerticalAlignment="Center" 
                          HorizontalAlignment="Center" />

                <!-- Window Controls -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" 
                           VerticalAlignment="Center" Margin="0,0,8,0">
                    <Button Width="32" Height="32" Background="Transparent" BorderThickness="0"
                           Click="MinimizeButton_Click"
                           ToolTip="Minimize">
                        <TextBlock Text="âˆ’" 
                                   FontSize="16" 
                                   Foreground="White" />
                    </Button>
                    <Button Width="32" Height="32" Background="Transparent" BorderThickness="0"
                           Click="CloseButton_Click"
                           ToolTip="Close">
                        <TextBlock Text="âœ•" 
                                   FontSize="14" 
                                   Foreground="White" />
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Content Frame -->
                            <Border Grid.Row="1" Background="#FF2D2D30">
                <ContentControl Content="{Binding CurrentView}" 
                               HorizontalContentAlignment="Stretch"
                               VerticalContentAlignment="Stretch" />
            </Border>

            <!-- Progress Indicator -->
            <Border Grid.Row="2" 
                   Background="#FF4F4F55" 
                   Height="4"
                   Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ProgressBar IsIndeterminate="True" 
                           Background="Transparent" 
                           Foreground="#FF00BCD4" />
            </Border>

            <!-- Step Progress Indicator -->
            <Grid Grid.Row="2" Background="#FF3F3F46" 
                  Height="60" 
                  Visibility="{Binding ShowStepProgress, Converter={StaticResource BooleanToVisibilityConverter}}">
                
                <ItemsControl ItemsSource="{Binding InstallationSteps}" 
                             HorizontalAlignment="Center" 
                             VerticalAlignment="Center">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="8,0">
                                <!-- Step Circle -->
                                <Border Width="32" Height="32" 
                                       CornerRadius="16" 
                                       Background="#FF673AB7"
                                       BorderBrush="#FF673AB7" 
                                       BorderThickness="2">
                                    <TextBlock Text="{Binding StepNumber}" 
                                              Foreground="White" 
                                              FontSize="12" FontWeight="Bold"
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center" />
                                </Border>
                                
                                <!-- Connection Line -->
                                <Line X1="0" Y1="0" X2="20" Y2="0" 
                                     Stroke="#FF673AB7" 
                                     StrokeThickness="2" 
                                     VerticalAlignment="Center"
                                     Visibility="Visible" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                
                <!-- Step Labels -->
                <ItemsControl ItemsSource="{Binding InstallationSteps}" 
                             HorizontalAlignment="Center" 
                             VerticalAlignment="Bottom" 
                             Margin="0,0,0,8">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding StepName}" 
                                      FontSize="10" 
                                      Width="60" 
                                      TextAlignment="Center" 
                                      Margin="8,0"
                                      Foreground="#FFCCCCCC" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Grid>
            </Border>
</Window> 